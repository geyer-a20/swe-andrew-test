<div style="margin:auto;">
<h1>Reset Password</h1>
<%= bootstrap_form_tag(url: password_resets_path, :method => :post, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-3") do |f| %>
    <div class="field font-weight-bold">
        <%= f.text_field :email %>
    </div>
    <%= f.submit "Reset Password" %>
<% end %>
</div>