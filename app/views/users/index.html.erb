<div style="margin:auto;">
<h1>Sign Up</h1>
<%= bootstrap_form_for(@user,:url => users_path, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-3") do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
        <h2> Form is invalid </h2>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>

  <div class = "field font-weight-bold">
    <%= f.text_field :name %>

    <%= f.text_field :email %>

    <%= f.password_field :password %>

    <%= f.password_field :password_confirmation %>
  </div>    

    <%= f.submit "Create User" %>
<% end %>
Already have an account? <%= link_to "Login", root_url %></p>
</div>