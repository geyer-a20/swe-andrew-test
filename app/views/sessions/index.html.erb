  <div style="margin:auto;"> 
    <h1>Login</h1>
    <%= bootstrap_form_tag(url: sessions_path, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-3") do |f| %>
        <div class="field font-weight-bold">
          <%= f.text_field :email %>
          <%= f.password_field :password %>
        </div>
        <%= f.form_group do %>
          <%= f.submit "Log In" %>
        <% end %>
        New User? <%= link_to "Sign Up!", new_user_path %>
    <%# <p style="margin-top: 10px;"><%= link_to "Forgot Password?", new_password_reset_path %>
    <% end %>
</div><!-- div style="margin:auto;"-->