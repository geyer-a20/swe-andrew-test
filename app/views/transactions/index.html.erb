<h1>Check In/Out</h1>

<%= link_to("Check Out Item", new_transaction_path, :class => "action new") %>
<%= link_to("View History", "log") %>
<%= link_to "Export to spreadsheet", transactions_path(format: "xlsx") %>

<table class="listing" summary="Transaction List">
    <tr class="header">
        <th>Check Out ID</th>
        <th>Checked Out By</th>
        <th>Item</th>
        <th>Quantity</th>
        <th>Checkout date</th>
    </tr>
    <% @transactions.each do |t| %>
    <tr>
        <td><%= t.id %></td>
        <td><%= t.requestor_name %></td>
        <td><%= t.item_name %></td>
        <td><%= t.item_quantity %></td>
        <td><%= t.created_at %></td>
        <td><%= t.type_ %></td>
        <td class="actions">
            <%= link_to("View Details", transaction_path(t), :class => 'action show') %>
            <%= link_to("Check In", edit_transaction_path(t), :class => 'action edit') %>
        </td>
    </tr>
    <% end %>
</table>
